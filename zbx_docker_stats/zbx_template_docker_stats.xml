<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>4.4</version>
    <date>2020-02-16T18:41:12Z</date>
    <groups>
        <group>
            <name>Templates</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>Template App Docker Containers</template>
            <name>Template App Docker Containers</name>
            <groups>
                <group>
                    <name>Templates</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>Docker</name>
                </application>
            </applications>
            <discovery_rules>
                <discovery_rule>
                    <name>Docker containers</name>
                    <key>docker.discovery</key>
                    <delay>1h</delay>
                    <item_prototypes>
                        <item_prototype>
                            <name>Docker stats {#NAME}</name>
                            <key>docker.stats[{#NAME}]</key>
                            <history>0</history>
                            <trends>0</trends>
                            <value_type>TEXT</value_type>
                            <applications>
                                <application>
                                    <name>Docker</name>
                                </application>
                            </applications>
                        </item_prototype>
                        <item_prototype>
                            <name>CPU {#NAME}</name>
                            <type>DEPENDENT</type>
                            <key>docker_container_cpu[{#NAME}]</key>
                            <delay>0</delay>
                            <value_type>FLOAT</value_type>
                            <units>%</units>
                            <applications>
                                <application>
                                    <name>Docker</name>
                                </application>
                            </applications>
                            <preprocessing>
                                <step>
                                    <type>JSONPATH</type>
                                    <params>$.CPU</params>
                                </step>
                            </preprocessing>
                            <master_item>
                                <key>docker.stats[{#NAME}]</key>
                            </master_item>
                        </item_prototype>
                        <item_prototype>
                            <name>Memory {#NAME}</name>
                            <type>DEPENDENT</type>
                            <key>docker_container_memory[{#NAME}]</key>
                            <delay>0</delay>
                            <value_type>FLOAT</value_type>
                            <units>%</units>
                            <applications>
                                <application>
                                    <name>Docker</name>
                                </application>
                            </applications>
                            <preprocessing>
                                <step>
                                    <type>JSONPATH</type>
                                    <params>$.Memory</params>
                                </step>
                            </preprocessing>
                            <master_item>
                                <key>docker.stats[{#NAME}]</key>
                            </master_item>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{last()}=0</expression>
                                    <name>Container running ({#NAME} on {HOST.NAME})</name>
                                    <priority>WARNING</priority>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                    </item_prototypes>
                    <lld_macro_paths>
                        <lld_macro_path>
                            <lld_macro>{#NAME}</lld_macro>
                            <path>$.name</path>
                        </lld_macro_path>
                    </lld_macro_paths>
                </discovery_rule>
            </discovery_rules>
        </template>
    </templates>
</zabbix_export>
